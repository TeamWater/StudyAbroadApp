<?xml version="1.0" encoding="UTF-8"?>
<Alloy>
   <TabGroup platform="ios">
      <Tab>
         <Window id="mapWin" platform="ios">
            <View id="MapView">
               <RightNavButton>
                  <Button title="Menu" onClick="openMenu" />
               </RightNavButton>
            </View>
         </Window>
      </Tab>
   </TabGroup>
   <Window id="mapWin" platform="android">
      <Menu platform="android" class="menuBar">
         <MenuItem title="Menu" onClick="openMenu" />
      </Menu>
      <ScrollView id="mapScroll">
         <View id="youView">
            <Label id="youBtn" class="mapLabel" text="You Are Here" />
         </View>
         <View id="copeView">
            <Label id="copeBtn" class="mapLabel" text="Copenhagen" />
         </View>
         <View id="osloView">
            <Label id="osloBtn" class="mapLabel" text="Oslo" />
         </View>
         <View id="gothView">
            <Label id="gothBtn" class="mapLabel" text="Gothenburg" />
         </View>
      </ScrollView>
   </Window>
</Alloy>