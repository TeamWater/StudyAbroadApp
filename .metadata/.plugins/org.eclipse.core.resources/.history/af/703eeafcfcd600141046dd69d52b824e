
function doClick(e) {
    $.menu.open();
   } 

var button = Titanium.UI.createButton({
   title: 'Agenda',
   top: 10,
   width: 200,
   height: 100
});
button.addEventListener('click',function OpenAgenda()
{
   var Agenda = Alloy.createController("Agenda").getView();
	Agenda.open();
});

