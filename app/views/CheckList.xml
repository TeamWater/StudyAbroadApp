<Alloy>
	<TabGroup BackgroundColor="#1da587" barColor="#1da587" navBarHidden="true" tintColor="#e9e9e9" platform="ios">
        	<Tab>
        		<Window class="container" id="index">
        			<RightNavButton platform="ios" icon="ic_menu_white_48dp.png" class="menuBar"/>
        			<RightNavButton   >
                   <Button title="Menu" onClick="openMenu" />
                </RightNavButton>
        <TableView id="menu" separatorColor="transparent">
        		<TableViewRow class="space">
					<Button class="menuButtons" onClick="OpenBeforeLeavingChecklist" >Before Leaving Country</Button>
				</TableViewRow>
				
				<TableViewRow class="space">
					<Button  class="menuButtons" onClick="OpenInCountryChecklist" >In-Country</Button>
				</TableViewRow>

				<TableViewRow class="space">
					<Button class="menuButtons" onClick="OpenBeforeHeadingHomeChecklist">Before Heading Home</Button>
				</TableViewRow>
				
				</TableView>	
	</Window>
   </Tab>
</TabGroup>
   
   <Window class="container" id="index" platform="android">
   	<Menu platform="android" class="menuBar" >
			 <MenuItem title="Menu" onClick="openMenu"/>
		</Menu>
        <TableView id="menu" separatorColor="transparent">
        		<TableViewRow class="space">
					<Button class="menuButtons" onClick="OpenBeforeLeavingChecklist" >Before Leaving Country</Button>
				</TableViewRow>
				
				<TableViewRow class="space">
					<Button  class="menuButtons" onClick="OpenInCountryChecklist" >In-Country</Button>
				</TableViewRow>		
				
				<TableViewRow class="space">
					<Button class="menuButtons" onClick="OpenBeforeHeadingHomeChecklist">Before Heading Home</Button>
				</TableViewRow>
				
				</TableView>	
	</Window>
</Alloy>
